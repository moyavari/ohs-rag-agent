# OHS Copilot Environment Variables

# Demo Mode - Set to true for offline demo with fixtures
DEMO_MODE=false

# Azure OpenAI Configuration
AOAI_ENDPOINT=https://your-aoai-resource.openai.azure.com/
AOAI_API_KEY=your-azure-openai-api-key
AOAI_CHAT_DEPLOYMENT=gpt-4
AOAI_EMB_DEPLOYMENT=text-embedding-ada-002

# Vector Store Configuration (qdrant|pgvector|cosmos)
VECTOR_STORE=qdrant

# Qdrant Configuration
QDRANT_ENDPOINT=http://localhost:6333
QDRANT_API_KEY=your-qdrant-api-key

# PostgreSQL + pgvector Configuration
PG_CONN_STR=Server=localhost;Database=ohscopilot;User Id=postgres;Password=password;

# Cosmos DB Configuration
COSMOS_CONN_STR=AccountEndpoint=https://your-cosmos-account.documents.azure.com:443/;AccountKey=your-cosmos-key;

# Memory Backend Configuration (cosmos|pg)
MEMORY_BACKEND=cosmos
MEMORY_COSMOS_CONN_STR=AccountEndpoint=https://your-memory-cosmos.documents.azure.com:443/;AccountKey=your-memory-key;
MEMORY_PG_CONN_STR=Server=localhost;Database=ohscopilot_memory;User Id=postgres;Password=password;

# Azure AI Content Safety Configuration
CONTENT_SAFETY_ENDPOINT=https://your-content-safety.cognitiveservices.azure.com/
CONTENT_SAFETY_KEY=your-content-safety-key

# Azure Application Insights Configuration
APPLICATIONINSIGHTS_CONNECTION_STRING=InstrumentationKey=your-instrumentation-key;IngestionEndpoint=https://your-region.in.applicationinsights.azure.com/

# Logging Configuration
LOG_SAMPLING=0.1

# API Configuration
ASPNETCORE_ENVIRONMENT=Development
ASPNETCORE_URLS=http://localhost:5000

# Security Configuration (optional - for production)
JWT_SECRET=your-jwt-secret-key
JWT_ISSUER=OHS.Copilot
JWT_AUDIENCE=OHS.Copilot.API

# Governance Configuration
PROMPT_VERSION_STORE=memory
AUDIT_LOG_RETENTION_DAYS=30

# Performance Configuration
MAX_TOKENS_PER_REQUEST=4096
MAX_CONCURRENT_REQUESTS=10
VECTOR_SEARCH_TOP_K=10
RERANK_ENABLED=false

# Content Safety Configuration
CONTENT_SAFETY_THRESHOLD=Medium
REDACTION_ENABLED=true

# Demo Mode Configuration
DEMO_FIXTURES_PATH=./fixtures
DEMO_TRACE_PATH=./docs/traces
